---
import formatDate from "@/utils/formatDate";

type Props = {
  title: string;
  publishedAt: Date;
  description: string;
  slug: string;
};

const { title, publishedAt, description, slug } = Astro.props;
---


<a
  class="group flex w-full cursor-pointer flex-col gap-3 glass-card-hover p-6 relative overflow-hidden"
  href={`/projects/${slug}`}
>
  <!-- Subtle gradient overlay on hover -->
  <div class="absolute inset-0 bg-gradient-to-br from-finance-blue/0 to-finance-purple/0 group-hover:from-finance-blue/5 group-hover:to-finance-purple/5 transition-all duration-300 rounded-2xl"></div>
  
  <div class="relative z-10">
    <div
      class="flex w-full flex-col justify-between gap-3 md:flex-row md:items-start"
    >
      <h3 class="text-white text-xl font-semibold leading-tight group-hover:text-finance-blue transition-colors">{title}</h3>
      <div class="flex flex-row items-center gap-3 text-sm text-neutral-400 shrink-0">
        <time datetime={publishedAt.toISOString()}>{formatDate(publishedAt)}</time>

        <svg
          width="20"
          height="20"
          viewBox="0 0 18 18"
          fill="none"
          class="transition-all duration-300 group-hover:translate-x-1 group-hover:translate-y-[-2px] opacity-60 group-hover:opacity-100"
        >
          <path
            d="M5.25 12.75L12.75 5.25"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
          <path
            d="M5.25 5.25H12.75V12.75"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </div>
    </div>

    <p class="text-neutral-300 line-clamp-2 leading-relaxed mt-2">
      {description}
    </p>
  </div>
</a>