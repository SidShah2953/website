---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

type Props = {
  src: ImageMetadata | string;
  alt: string;
  caption?: string;
  class?: string;
};

const { src, alt, caption, class: className, ...rest } = Astro.props;
---

<figure class={`my-8 ${className || ''}`}>
  <Image src={src} alt={alt} {...rest} class="w-full rounded-lg" />
  {caption && (
    <figcaption class="text-neutral-400 text-sm text-right mt-3 italic">
      {caption}
    </figcaption>
  )}
</figure>
