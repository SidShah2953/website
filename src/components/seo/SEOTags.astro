---
import { SEO } from "astro-seo";
import { SITE_URL } from "@/data/config";
import type { HeadTags } from "@/utils/types/HeadTags";
import presentation from "@/data/presentation";

type Props = HeadTags;

const { title, description, noindex, canonical, og } = Astro.props;

const DEFAULT_TITLE_PAGE = "Siddhant Shah";
const DEFAULT_DESCRIPTION_PAGE = presentation.description.replace(/\*/g, '');

// Build canonical URL
const canonicalUrl = canonical
  ? (canonical.startsWith('http') ? canonical : `${SITE_URL}${canonical}`)
  : `${SITE_URL}${Astro.url.pathname}`;

// Build OG image URL
const ogImage = og?.image
  ? (og.image.startsWith('http') ? og.image : `${SITE_URL}${og.image}`)
  : `${SITE_URL}/social-prev.png`;

const openGraph = {
  title: og?.title || title || "Hello! I'm Siddhant.",
  type: og?.type || "website",
  image: ogImage,
  alt: og?.alt || "Siddhant Shah",
  url: canonicalUrl,
  description: og?.description || description || DEFAULT_DESCRIPTION_PAGE,
};
---

<head>
  <SEO
    charset="UTF-8"
    title={title || DEFAULT_TITLE_PAGE}
    description={description || DEFAULT_DESCRIPTION_PAGE}
    noindex={noindex || false}
    canonical={canonicalUrl}
    openGraph={{
      basic: {
        title: openGraph.title,
        type: openGraph.type,
        image: openGraph.image,
        url: openGraph.url,
      },
      optional: {
        description: openGraph.description,
      },
      image: {
        alt: openGraph.alt,
      },
    }}
    twitter={{
      card: "summary_large_image",
      title: openGraph.title,
      description: openGraph.description,
      image: openGraph.image,
    }}
    extend={{
      link: [
        { rel: "icon", href: "/favicon.svg" },
        { rel: "apple-touch-icon", href: "/favicon.svg" },
        { rel: "apple-touch-icon-precomposed", href: "/favicon.svg" },
        { rel: "sitemap", href: "/sitemap-index.xml" },
      ],
      meta: [
        { name: "viewport", content: "width=device-width, initial-scale=1" },
        { name: "generator", content: Astro.generator },
        { name: "author", content: "Siddhant Shah" },
      ],
    }}
  />
</head>
