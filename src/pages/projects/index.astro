---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import formatDate from "@/utils/formatDate";

const projects = (await getCollection("projects")).sort(function (first, second) {
  return second.data.publishedAt.getTime() - first.data.publishedAt.getTime();
});
---

<Layout title="All Projects">
  <main class="flex flex-col gap-12">
    <header>
      <h1 class="text-4xl md:text-5xl font-bold gradient-text">Projects</h1>
    </header>
    <article class="flex flex-col gap-4">
      {
        projects.map((project) => (
          <a
            class="group glass-card-hover p-6 flex flex-col gap-3 relative overflow-hidden"
            href={`/projects/${project.slug}`}
          >
            <div class="absolute inset-0 bg-gradient-to-br from-finance-blue/0 to-finance-purple/0 group-hover:from-finance-blue/5 group-hover:to-finance-purple/5 transition-all duration-300 rounded-2xl"></div>
            <div class="flex w-full items-center justify-between relative z-10">
              <h2 class="text-2xl font-semibold text-white group-hover:text-finance-blue transition-colors">{project.data.title}</h2>

              <div class="flex flex-row items-center gap-4 text-neutral-400 text-sm">
                <time datetime={project.data.publishedAt.toISOString()}>{formatDate(project.data.publishedAt)}</time>
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 18 18"
                  fill="none"
                  class="transition-all duration-300 group-hover:translate-x-1 group-hover:translate-y-[-2px] opacity-60 group-hover:opacity-100"
                >
                  <path
                    d="M5.25 12.75L12.75 5.25"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                  <path
                    d="M5.25 5.25H12.75V12.75"
                    stroke="#999999"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </div>
            </div>
            <p>{project.data.description}</p>
          </a>
        ))
      }
    </article>
  </main>
</Layout>
