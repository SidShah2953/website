---
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: {},
  }));
}

const { slug } = Astro.params;
// Redirect old posts URLs to blog
return Astro.redirect(`/blog/${slug}`, 301);
---
<link
rel="stylesheet"
href="https://cdn.jsdelivr.net/npm/katex@0.15.2/dist/katex.min.css"
integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHr3FeuDNfhsLPYrq2t0UBkUdK2jyTnXPEK1NQ"
crossorigin="anonymous"
/>
<Layout title={post.data.title} description={post.data.description}>
  <main class="post mx-auto flex w-full max-w-full flex-col gap-4">
    <header role="presentation">
      <h1 class="text-4xl">
        {post.data.title}
      </h1> <br>
      <p class="bold text-xl">
        Published on {formatDate(post.data.publishedAt)}
      </p> <br>
      <p class="semibold leading-tight">{post.data.description}</p>
    </header>
    <hr>
    <h2 class="text-2xl">
      Table of Contents
    </h2>
    <Content />
  </main>
</Layout>